= search_form_for LogTransaction.ransack(params[:reports]), {as: :reports, url: generate_report_service_admin_panel_transaction_logs_path(format: :csv), method: :get, class: 'filter_form'} do |f|
  .filter_form_field.filter_select
    = f.label :user_id, class: 'label'
    = f.select :user_id_eq, users.map {|u| [u.public_display_name, u.id]}, {prompt: 'Any'}
  .filter_form_field.filter_date_range
    = f.label :created_at, class: 'label'
    = f.text_field :created_at_gteq, class: 'datepicker', size: 12, max: 10, id: 'q_created_at_gteq_csv'
    %span.seperator -
    = f.text_field :created_at_lteq, class: 'datepicker', size: 12, max: 10, id: 'q_created_at_lteq_csv'

  .buttons
    = submit_tag 'Export to CSV'

