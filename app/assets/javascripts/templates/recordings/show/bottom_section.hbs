<div class="mainVideoSection-sub-header">
    <ul class="full-width nav nav-tabs nav-justified" role="tablist">
        <li class="full-width description-tab" style="{{#if (or description custom_description)}}{{else}}display: none;{{/if}}">
            <a data-toggle="tab" data-target="#MS_Description" href="#">Description</a>
        </li>
        <li class="full-width shop-tab" style="display: none;">
            <a data-toggle="tab" data-target="#MS_Shop" href="#">Shop</a>
        </li>
    </ul>
</div>
<div class="mainVideoSection-sub-body">
    <div class="tab-content">
        <div class="tab-pane" id="MS_Description">
            {{#if description}}
                <p class="margin-bottom-5">{{{description}}}</p>
            {{/if}}
            {{#if custom_description}}
                <div class="MVc-AboutHead margin-top-20">Instructions</div>
                <p class="margin-bottom-5">{{{custom_description}}}</p>
            {{/if}}
        </div>
        <div class="tab-pane" id="MS_Shop">
            {{! javascripts/templates/sessions/player/shop_tab.hbs }}
        </div>
    </div>
</div>
