<div class="col-md-9 VodSection" style='display: none;'>
    <div class="megavideoiframeWrapper RecordingWrapp">
        <img class="videoThumbnailImg" src="{{thumbnailUrl}}" style="z-index: 10;"></img>
        <div class="megavideoiframe" style="display: none;"  data-url="{{url}}"></div>
<!--        <iframe controls controlslist="nodownload" style="z-index: 11; visibility: hidden;"></iframe>-->
        <div class="kastulishe" style="z-index: 12;"></div>
        <div class="VodPurchasePopup" style="display: none; background-image: url('{{posterUrl}}')">
            <div class="coverVodPurchasePopup"></div>

            <p class="rent-to-continue-watching" style="display: none; z-index: 2; position: relative;">
                To watch please Rent this video.
            </p>

            <p class="login-to-continue-watching" style="display: none; z-index: 2; position: relative;">
                To watch please log in.
            </p>
            <a class="ensure-link-style mainButton bigBtn vod-purchase-btn" href="#">
                <span class="login-to-proceed" style="display: none">
                  Log In
                </span>
                <span class="login-and-rent" style="display:none">
                  Log In and Rent
                </span>
                {{#if obtainableForAmount}}
                  <span class="mainButton rent-as-signed-in" style="display: none; visibility: visible;">
                      Rent Video for
                      <strong>{{obtainableForAmount}}</strong>
                  </span>
                {{/if}}
            </a>
        </div>
        {{#unless obtainableForAmount}}
            <a href="/recordings/{{id}}/get_video" data-method="POST" data-remote="true" rel="nofollow"
               class="triangle" style="visibility: visible;">
                <i class="icon-googleplay"></i>
            </a>
            <div class="spinnerSlider" style="display: none; z-index: 13;">
                <div class="bounceS1"></div>
                <div class="bounceS2"></div>
                <div class="bounceS3"></div>
            </div>
        {{/unless}}
    </div>
</div>

<div id="right_Vod_bar" class="col-md-3 VodSection" style="display:none">
    <div class="about-VOD">
        <div class="VOD-info-header video_title">
          {{title}}
        </div>

        <div class="right-sidebar">
            <div class="right-sidebarWrapper RentVideoBTN_wrapp" style="{{#unless obtainableForAmount}} display:none {{/unless}}">
                <a class="mainButton bigBtn full-width rent-video-for-amount-button {{#if obtainableForAmount}} for-rent {{/if}}"
                   href="#" style="visibility: visible">
                    Rent Video for
                    <strong>{{obtainableForAmount}}</strong>
                </a>
            </div>
        </div>
    </div>

    <div class="scrollWrapper">
        <div class="VOD-info-content video_description">
            {{{description}}}
        </div>
        <div class="shop panel-group listsArea clearfix" id="accordion{{id}}" role="tablist"
             aria-multiselectable="true">
          {{#each lists}}
            {{#if products}}
                <div class="list_info panel panel-default" id="listPanel{{id}}">
                    <div class="panel-heading" role="tab" id="listHeading{{id}}">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion{{../id}}"
                               href="#collapseList{{id}}">
                                Shop now
                            </a>
                        </h4>
                    </div>

                    <div id="collapseList{{id}}" class="panel-collapse in" role="tabpanel"
                         aria-labelledby="listHeading{{id}}">
                        <div class="panel-body">
                            <div class="redBG">
                                <div class="description">{{!description}}</div>
                            </div>
                            <div class="sectionTitle">
                                <div class="pt10">{{name}}</div>
                            </div>
                            <div class="Products-wrapp">
                            </div>
                            <div class="prodctTileList">
                              {{#each products}}
                                  <div class="productTile">
                                      <div class="productTile-img" style="background-image: url({{image_url}})"></div>
                                      <a style="cursor: pointer;" target="_blank" href="{{formatUrl url}}">{{title}}</a>

                                      <!--<div class="productTile-long-description">{{!description}}</div>-->

                                      <div class="productTile-short-description clearfix">
                                        <!--<a href="{{!formatUrl url}}" target="_blank" class="product-link">{{url}}</a>-->

                                        {{#if price_cents}}<div class="price pull-right">{{price}}</div>{{/if}}
                                      </div>
                                  </div>
                              {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
          {{/each}}
        </div>
    </div>
</div>
